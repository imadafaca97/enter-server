generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Provincia {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  path String
  proyectos Proyecto[]
  empleados Empleado[]
}

model Proyecto {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  empleadosIds String[] @db.ObjectId
  provinciaId String
  
  provincia Provincia @relation(fields: [provinciaId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  empleados Empleado[] @relation(fields: [empleadosIds], references: [id])
}
model Empleado {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  proyectosIds String[] @db.ObjectId
  provinciaId String
  entryID  EmployeesEntry?

  provincia Provincia @relation(fields: [provinciaId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  proyectos Proyecto[] @relation(fields: [proyectosIds], references: [id])
}

model Users {
  uid String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  docNumber String
  name String
  lastName String
  email String
  isSupervisor Boolean
  userCreated Boolean
}

model EmployeesEntry {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  employeeID String
  employe Empleado @relation(fields: [employeeID], references: [id])
}

